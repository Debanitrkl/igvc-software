<!-- localization.launch -->
<!--
    This file launches the particle_filter node which performs robot localization
    -->
<launch>
    <arg name="gdb" default="false"/>
    <arg name="launch-prefix" value="gdb -ex run --args" if="$(arg gdb)"/>
    <arg name="launch-prefix" default="" unless="$(arg gdb)"/>
    <node pkg="igvc_navigation" type="particle_filter" name="particle_filter" output="screen" launch-prefix="$(arg launch-prefix)">
        <rosparam command="load" file="$(find igvc_navigation)/launch/particle_filter.yaml"/>
        <rosparam command="load" file="$(find igvc_navigation)/launch/octomap.yaml"/>
    </node>
</launch>
